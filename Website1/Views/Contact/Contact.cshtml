
@{
    ViewData["Title"] = "Contact";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/contact.css" />
</head>
<body>
    <section class="pictureOne">
        <div class="ptext1">
            <span class="text">Paralax Website</span>
        </div>
    </section>
    <section class="details">
        <div class="grid-container">
            <div class="grid-item">
                <p>Contact Us</p>
                <h3>Get In Touch</h3>
                <br />
                <p>Hi Therr kksd sodbso sv ssv  s</p>
                <br />
                <p><b> kuubsdkbvso snvosdh vdo osd so sdo os </b></p>


            </div>
            <div class="grid-item">
                <h3>Send Us A Message</h3>
                <form asp-controller="Contact" asp-action="Submit" method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Enter your name">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" placeholder="name@example.com">
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" rows="3" placeholder="Enter your message"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

            </div>
        </div>
    </section>
    <section class="map">
        <div class="pic">
            <img src="~/images/Map.jpg" />
        </div>
    </section>
    <section class="email-subscribe">
        <div class="grid-container">
            <div class="grid-item">
                <h1 class="NewsH1">NewsLetter</h1>
                <p class="Newsp">Sign up for our monthly newsletter to the latest news About Paralax </p>
            </div>
            <div class="grid-item">
                <br />
                <div class="input-group">
                    <input type="email" class="form-control rounded" placeholder="Enter Your Mail" aria-label="Search" aria-describedby="search-addon" />
                    <button type="button" class="btn btn-outline-primary" data-mdb-ripple-init>Subscribe</button>
                </div>
            </div>
        </div>
    </section>
    <section class="LastPart">

    </section>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="popup">
            <h2>Thank you for your submission!</h2>
            <p>@TempData["SuccessMessage"]</p>
        </div>
    }
    <!-- Scripts if needed -->
</body>
</html>
